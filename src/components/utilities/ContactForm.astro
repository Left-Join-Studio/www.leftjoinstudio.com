<form name="contact-us"
      action="https://api.web3forms.com/submit"
      method="POST">

    <input type="hidden" name="access_key" value="d691df8f-24fd-4e9a-9337-ebed40ded524">
    <input type="hidden" name="redirect" value="https://web3forms.com/success">
    <input type="hidden" name="subject" value="LJS Contact Recieved">

    <div class="form-control">
        <label class="label">
            <span class="label-text">Who are you?</span>
        </label>
        <input type="text" 
               class="input input-bordered w-full max-w-xs"
               name="name"
               placeholder="First, Last, or Company Name" 
               required="" />
    </div>
    <div class="form-control">
        <label class="label">
            <span class="label-text">Email Address</span>
        </label>
        <input type="email"
               class="input input-bordered w-full max-w-xs"
               name="email"
               placeholder="email@domain.tld"
               required="" />
    </div>
    <div class="form-control">
        <label class="label">
            <span class="label-text">Message</span>
        </label>
        <textarea rows="5"
                  class="textarea textarea-bordered h-24"
                  name="message"
                  placeholder="When can we talk about this amazing idea?" required=""></textarea>
    </div>

    <div class="form-control pt-4">
        <input type="submit" 
               class="btn"
               value="Submit" />

        <div data-lastpass-icon-root="" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;">
        </div>
    </div>
</form>
